# Database
DATABASE_URL="file:./dev.db"

# OpenAI API Key (REQUIRED)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Bright Data MCP API Key (REQUIRED)
# Get your API key from https://brightdata.com
BRIGHTDATA_API_KEY=

# Cache settings
LLM_CACHE_TTL_HOURS=4
FETCH_TIMEOUT_MS=10000

# Search & Scraping settings (parallel processing)
MAX_SEARCH_QUERIES=20
MAX_URLS_TO_SCRAPE=100
MAX_CONCURRENT_SEARCHES=5
MAX_CONCURRENT_SCRAPES=3
SCRAPE_DELAY_MS=500
CONTENT_TOKEN_LIMIT=2000

# Debug settings (set to true to save pipeline data to /debug folder)
DEBUG_PIPELINE=false
